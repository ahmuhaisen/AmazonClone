@model CustomerCartCheckoutViewModel




<div class="checkout-section">
    <div class="d-flex justify-content-between my-2">
        <span class="fw-bold fs-5">Sub-Total</span>
        <span class="fw-bold fs-5">@Model.SubTotal.ToString("C")</span>
    </div>
    <div class="d-flex justify-content-between my-2">
        <small class="text-muted">Delivery</small>
        <small class="text-muted">@Model.Delivery.ToString("C")</small>
    </div>
    <div class="d-flex justify-content-between my-2">
        <small class="text-muted">Tax</small>
        <small class="text-muted">(@Model.TaxRate%) + @Model.SubTotalTax.ToString("C")</small>
    </div>
    <hr class="text-muted my-4 py-0" />
    <div class="d-flex justify-content-between my-2">
        <span class="fw-bold fs-5">Total</span>
        <span class="fw-bold fs-5">@Model.Total.ToString("C")</span>
    </div>
</div>
