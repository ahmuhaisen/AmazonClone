@model CategoryDto

<div class="d-flex justify-content-center my-4">
    <div class="card p-4 shadow-sm rounded-3 text-start w-50">
        <form method="post">
            @if (Model.Id == 0)
            {
                <h1>Create a Category</h1>
            }
            else
            {
                <h1>Edit Category</h1>
            }

            <input asp-for="Id" hidden />

            <div class="mt-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name"></span>
            </div>

            <div class="mt-3">
                <label asp-for="IconString"></label>
                <input asp-for="IconString" class="form-control" />
                <span asp-validation-for="IconString"></span>
            </div>

            <div class="mt-3">
                @Html.CheckBoxFor(m => m.HasSize, new { @checked = "checked" })
                <label asp-for="HasSize">This category has Size?</label>
            </div>

            <div class="mt-3 text-start">
                <div class="row">
                    <div class="col-lg-5 col-md-12">
                        @if (Model.Id == 0)
                        {
                            <button type="submit" class="btn btn-warning form-control">Create</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-warning form-control">Update</button>
                        }
                    </div>
                    <div class="col-lg-5 col-md-12 ">
                        <a class="btn btn-outline-dark w-100"
                           asp-area="Admin" asp-controller="Category" asp-action="Index">
                            Back to all Categories
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
