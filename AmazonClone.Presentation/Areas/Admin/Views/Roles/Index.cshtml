@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Roles";
}

<h1>User's Roles</h1>
<div class="mt-5">
    <partial name="_RoleAddForm" model="new AdminRoleFormViewModel()" />

    <table class="table table-striped table-hover border border-2 w-75">
        <thead>
            <tr class="bg-warning text-white">
                <th class="w-50">Id</th>
                <th>Role Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                </tr>
            }
        </tbody>
    </table>
</div>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}