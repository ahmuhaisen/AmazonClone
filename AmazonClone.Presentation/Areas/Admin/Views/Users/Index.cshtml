@model IEnumerable<AdminUserViewModel>

@{
    ViewData["Title"] = "All Users";
}

<h1>All Users</h1>

<table class="table table-striped table-hover border border-2">
    <thead>
        <tr class="bg-warning text-white">
            <th>Name</th>
            <th>Username</th>
            <th>Email</th>
            <th>Roles</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@string.Join(", ", user.Roles.ToList())</td>
                <td class="text-center">
                    <a class="btn btn-outline-dark btn-sm" asp-controller="Users" asp-action="ManageRoles" asp-route-userId="@user.Id" title="Manage Roles">
                        <i class="bi bi-pencil-square me-2"></i> Manage Roles
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
